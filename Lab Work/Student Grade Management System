    private void add_studentActionPerformed(java.awt.event.ActionEvent evt) {                                            
        Sname.setVisible(true);
        name.setVisible(true);
        marks.setVisible(false);
        m1.setVisible(false);
        m2.setVisible(false);
        m3.setVisible(false);
    }                                           

    private void add_marksActionPerformed(java.awt.event.ActionEvent evt) {                                          
        marks.setVisible(true);
        m1.setVisible(true);
        m2.setVisible(true);
        m3.setVisible(true);
         Sname.setVisible(false);
        name.setVisible(false);
    }                                         

