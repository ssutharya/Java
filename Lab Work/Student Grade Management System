    private void display_nameActionPerformed(java.awt.event.ActionEvent evt) {                                             
        marks.setVisible(false);
        m1.setVisible(false);
        m2.setVisible(false);
        m3.setVisible(false);
        Sname.setVisible(true);
        name.setVisible(true);
    }                                            

