    private void resulActionPerformed(java.awt.event.ActionEvent evt) {                                      
        int x = Integer.parseInt(n1.getText());
        int y = Integer.parseInt(n2.getText());
        
        int z = 0;
        
        if (add.isSelected())
            z = x + y;
        else if (sub.isSelected())
            z = x - y;
        else if (mult.isSelected())
            z = x * y;
        else if (div.isSelected())
            z = x / y;
        res.setText("" + z);
    }                                     

    private void n2ActionPerformed(java.awt.event.ActionEvent evt) {                                   
